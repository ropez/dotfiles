[alias]
	ci = commit
	co = checkout
	st = status
	mt = mergetool
	amend = commit --amend
	sp = stash pop
	ss = stash show -p
	up = remote update --prune
	ff = pull --ff-only --all
    #l = log --decorate --graph

    # From Gary Bernhardt
    #st = status
    #ci = commit
    #co = checkout
    di = diff
    dc = diff --cached
    #amend = commit --amend
    aa = add --all
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    #ff = merge --ff-only
    #pullff = pull --ff-only
    #noff = merge --no-ff
    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    pom = push origin master
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[diff "odf"]
	textconv = odt2txt
[push]
	default = tracking
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[rerere]
	enabled = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
